{
  "private": true,
  "scripts": {
    "build:emailer": "pushd emailer && yarn build && popd",
    "test:api": "pushd api && yarn test:ci && popd",
    "test:emailer": "pushd emailer && yarn test:ci && popd",
    "test:ui": "pushd ui && CI=true yarn test --color && popd",
    "test:integration": "pushd api && yarn test:queries"
  },
  "devDependencies": {
    "husky": "^1.1.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.6",
    "pretty-quick": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm-run-all test:api test:emailer test:ui",
      "pre-push": "npm-run-all build:* && yarn test:integration"
    }
  }
}
